<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="drop_down_x2m_lines.list">
            <field name="name">drop_down_x2m_lines list</field>
            <field name="model">drop_down_x2m_lines.drop_down_x2m_lines</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="im_sale_order_list">
            <field name="name">im_sale_order_list</field>
            <field name="model">im.sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="drop_down_x2m_lines.form">
            <field name="name">drop_down_x2m_lines form</field>
            <field name="model">drop_down_x2m_lines.drop_down_x2m_lines</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="value"/>
                            <field name="value2"/>
                        </group>
                        <notebook>
                            <page>
                                <field name="lines">
                                    <tree editable="bottom">
                                        <field name="ddXM_id"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="im_sale_order_form">
            <field name="name">im_sale_order_form</field>
            <field name="model">im.sale.order</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <button name="add_to_line"
                                    string="Add" type="object"/>
                        </group>
                        <notebook>
                            <page>
                                <field name="lines" widget="many2many_tags">
                                    <tree editable="bottom" widget="many2many_tags">
                                        <field name="drop_down_id"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="drop_down_x2m_lines.action_window">
            <field name="name">drop_down_x2m_lines window</field>
            <field name="res_model">drop_down_x2m_lines.drop_down_x2m_lines</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="im_sale_order_action">
            <field name="name">ImSaleOrderWindow</field>
            <field name="res_model">im.sale.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="drop_down_x2m_lines.action_server">
              <field name="name">drop_down_x2m_lines server</field>
              <field name="model_id" ref="model_drop_down_x2m_lines_drop_down_x2m_lines"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="drop_down_x2m_lines" id="drop_down_x2m_lines.menu_root"/>
        <menuitem name="ImSaleOrder" id="im_sale_order_menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="drop_down_x2m_lines.menu_1" parent="drop_down_x2m_lines.menu_root"/>
        <menuitem name="Menu 2" id="im_sale_order_menu_2" parent="im_sale_order_menu_root"/>
        <!-- actions -->

        <menuitem name="List" id="drop_down_x2m_lines.menu_1_list" parent="drop_down_x2m_lines.menu_1"
                  action="drop_down_x2m_lines.action_window"/>
        <menuitem name="ImSaleOrderList" id="im_sale_order_menu_1_list" parent="im_sale_order_menu_2"
                  action="im_sale_order_action"/>
        <!--    <menuitem name="Server to list" id="drop_down_x2m_lines" parent="drop_down_x2m_lines.menu_2"-->
        <!--              action="drop_down_x2m_lines.action_server"/>-->
    </data>
</odoo>